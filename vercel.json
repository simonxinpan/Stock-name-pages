{
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/demo", "destination": "/demo-stock-detail.html" },
    { "source": "/dynamic", "destination": "/dynamic-detail.html" },
    { "source": "/live", "destination": "/live-stock-detail.html" },
    { "source": "/prototype", "destination": "/prototype.html" },
    { "source": "/static", "destination": "/static-demo.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Authorization" }
      ]
    },
    {
      "source": "/:path((?!api/).*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}